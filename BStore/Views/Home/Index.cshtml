                                                            <ul>
                                                                <li><a asp-controller="InfomationProduct" asp-action="Index" asp-route-id="@item.MaThucDon"><button><i class="fa fa-search"></i></button></a></li>

                                                                <li class="order-button"><a><button type="button" title="Quick view" data-id="@item.MaThucDon"><i class="fa fa-shopping-cart"></i></button></a></li>
                                                                @*<li><a href="#" title="Quick view"><i class="fa fa-retweet"></i></a></li>
                                                                    <li><a href="#" title="Quick view"><i class="fa fa-heart-o"></i></a></li>*@
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="product-info">
                                                        <div class="customar-comments-box">


                                                        </div>
                                                        <a href="single-product.html">@item.TenThucDon</a>
                                                        <div class="price-box">
                                                            <span class="price">  @String.Concat(string.Format("{0:N0}", @item.GetGiaKhuyenMai), "Đ")</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                                <!-- NEW-PRODUCT-SINGLE-ITEM START -->
                            </div>
                            <!-- NEW-PRO-CAROUSEL END -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- NEW-PRODUCT-AREA END -->
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <!-- SALE-PRODUCTS START -->
            <div class="Sale-Products">
                <div class="left-title-area">
                    <h2 class="left-title">Sale Products</h2>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <!-- SALE-CAROUSEL START -->
                            <div class="sale-carousel">
                                @{
                                    foreach (var item in ViewBag.ListDiscount)
                                    {
                                        <div class="item">
                                            <div class="new-product">
                                                <div class="single-product-item">
                                                    <div class="product-image">
                                                        <a href="#"><img src="~/user/products/@item.HinhAnh" alt="product-image" style="width:225px ; height:225px" /></a>
                                                        <a href="#" class="new-mark-box">SALE - @item.KhuyenMai %</a>
                                                        <div class="overlay-content">
                                                            <ul>
                                                                <li><a asp-controller="InfomationProduct" asp-action="Index" asp-route-id="@item.MaThucDon"><button><i class="fa fa-search"></i></button></a></li>

                                                                <li class="order-button"><a><button type="button" title="Quick view" data-id="@item.MaThucDon"><i class="fa fa-shopping-cart"></i></button></a></li>
                                                                @*<li><a href="#" title="Quick view"><i class="fa fa-retweet"></i></a></li>
                                                                    <li><a href="#" title="Quick view"><i class="fa fa-heart-o"></i></a></li>*@
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="product-info">
                                                        <div class="customar-comments-box">

                                                        </div>
                                                        <a href="single-product.html">@item.TenThucDon</a>
                                                        <div class="price-box">
                                                            <span class="price">@String.Concat(string.Format("{0:N0}", @item.GetGiaKhuyenMai), "Đ")</span>
                                                            <span class="old-price"> @String.Concat(string.Format("{0:N0}", @item.Gia), "Đ")</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                }
                                <!-- SALE-PRODUCTS-SINGLE-ITEM START -->
                                <!-- SALE-PRODUCTS-SINGLE-ITEM END -->
                                <!-- SALE-PRODUCTS-SINGLE-ITEM END -->
                            </div>
                            <!-- SALE-CAROUSEL END -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- SALE-PRODUCTS END -->
        </div>
    </div>


