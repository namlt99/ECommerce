                                    {
                                        <img src="~/user/banner/@item.LinkBanner" alt="main slider" title="#@item.MaBanner" style="height:870px;width:432px;" />
                                    }
                                }
                            </div>

                            @*@{
                                    foreach (var item in ViewBag.ListBanner)
                                    {
                                        <div id="@item.MaBanner" class="nivo-html-caption slider-caption">
                                            <div class="slider-progress"></div>
                                            <div class="slider-cap-text slider-text1">
                                                <div class="d-table-cell">
                                                    <h2 class="animated bounceInDown">@item.TitleBanner</h2>
                                                    <p class="animated bounceInUp">@item.ContentBanner.</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- SLIDER-AREA END -->
            <!-- SLIDER-RIGHT START -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="slider-right zoom-img m-top">
                    <a href="#"><img class="img-responsive" src="~/user/products/biaduc.jpg" alt="sidebar left" /></a>
                </div>
            </div>
            <!-- SLIDER-RIGHT END -->
        </div>
        <!-- MAIN-SLIDER-AREA END -->
    </div>
