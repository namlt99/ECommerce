@model BStore.Models.LoaiThucDon

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Layout/AdminOK/_Layout.cshtml";
}

<h1> </h1>

<div class="col-6 offset-3" style="background-color:white">
    <h1>Chi Tiết Loại</h1>
    <hr />
    <dl class="row" style="color:black" >
        <dt class="col-sm-2">
            Mã Loại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaLoai)
        </dd>
        <dt class="col-sm-2">
            Tên Loại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenLoai)
        </dd>
        <dt class="col-sm-2">
            <a asp-action="Edit" asp-route-id="@Model.MaLoai"><input type="button" value="Edit" class="btn btn-primary" /></a>
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Index"><input type="button" value="Back" class="btn btn-primary" /></a>
        </dd>
    </dl>
</div>