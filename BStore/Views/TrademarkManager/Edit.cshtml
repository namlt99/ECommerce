@model BStore.Models.ThuongHieu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Layout/AdminOK/_Layout.cshtml";
}

<h1> </h1>

<h4> </h4>
<hr />
<div class="row">
    <    <div class="col-6 offset-3">
        <div class="col-7 offset-3">
            <h1>Chỉnh Sửa Thương Hiệu</h1>
        </div>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenTH" class="control-label">Tên thương hiệu</label>
                <input asp-for="TenTH" class="form-control" />
                <span asp-validation-for="TenTH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label">Logo</label>
                <input asp-for="HinhAnh" type="file" class="form-control-file" name="Ffile" multiple />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index"><input asp-action="Index" value="Back" type="button" class="btn btn-primary" /></a>
            </div>
        </form>
    </div>
</div>

