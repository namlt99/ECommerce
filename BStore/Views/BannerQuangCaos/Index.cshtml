@model IEnumerable<BStore.Models.BannerQuangCao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/AdminOK/_Layout.cshtml";
}
<br />
<div class="col-sm-4">
    <h1>Danh Sách Banner</h1>
    <a asp-action="Create"><i class="fas fa-plus-square" style="font-size:40px"></i></a>
</div>
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        @*<h5 class="card-header">Danh Sách User</h5>*@
        <div class="card-body p-0">
            <table class="table" border="1">
                <thead style="background-color:wheat">
                    <tr>
                        <th>
                            Tiêu Đề Banner
                        </th>
                        <th>
                            Nội Dung Banner
                        </th>
                        <th>
                            Hình Ảnh Banner
                        </th>
                        <th>
                            Hành Động
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TitleBanner)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContentBanner)
                            </td>
                            <td>
                                <img src="~/user/banner/@item.LinkBanner" style="height:141px; width:290px;" />
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaBanner">
                                    <i class="fas fa-edit"></i>
                                </a>|
                                <a asp-action="Details" asp-route-id="@item.MaBanner">
                                    <i class="fas fa-info-circle"></i>
                                </a>|
                                <a data-toggle="modal" data-target="@String.Concat("#exampleModal1",@item.MaBanner)">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                <div class="modal fade" id="@String.Concat("exampleModal1",@item.MaBanner)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel" style="text-align:center">Xóa Banner</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có muốn xóa Banner ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <a asp-action="Delete" asp-route-id="@item.MaBanner"> <button type="button" class="btn btn-primary">Xóa Banner</button></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
